generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
  isAdmin  Boolean @default(false)
  orders   Order[]
}

model Sweet {
  id       Int     @id @default(autoincrement())
  name     String
  category String
  price    Float
  quantity Int
  imageUrl String?
  orders   Order[]
}

model Order {
  id        Int      @id @default(autoincrement())
  userId    Int
  sweetId   Int
  sweetName String
  price     Float
  quantity  Int      @default(1)
  totalPrice Float
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  sweet     Sweet    @relation(fields: [sweetId], references: [id])
}
